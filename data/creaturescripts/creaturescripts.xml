<?xml version="1.0" encoding="UTF-8"?>
<creaturescripts>
  <!-- ===== RANK SYSTEM ===== -->
  <event type="spawn"        name="nx_rank_apply"  script="nx_rank_apply.lua"/>
  <event type="healthchange" name="nx_rank_scale"  script="nx_rank_scalers.lua"/>
  <event type="death"        name="nx_rank_scale"  script="nx_rank_scalers.lua"/>

  <!-- Optional fallback only if your fork emits statschange; otherwise OMIT this line -->
  <!-- <event type="statschange"  name="nx_rank_scale2" script="nx_rank_scalers.lua"/> -->

  <!-- Players looking at monsters: reveal rank line -->
  <event type="look"         name="nx_rank_look"   script="nx_rank_look.lua"/>

  <!-- Your item-serialization look addon -->
  <event type="look"         name="SerialOnLook"   script="serial_on_look.lua"/>

  <!-- ===== BOSS AI ===== -->
  <event type="spawn"        name="nx_boss_spawn"  script="nx_boss_think.lua"/>
  <event type="think"        name="nx_boss_think"  script="nx_boss_think.lua"/>
  <event type="healthchange" name="nx_boss_hit"    script="nx_boss_think.lua"/>
  <event type="target"       name="nx_boss_target" script="nx_boss_think.lua"/>
  <event type="death"        name="nx_boss_death"  script="nx_boss_think.lua"/>
</creaturescripts>
